page {
  background: #F6F6F5;
}
.search {
  padding: 24rpx 0;
  margin: 10rpx 0 2rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  border-top: 1rpx solid #e3e5ea;
  background: #fff;
}
