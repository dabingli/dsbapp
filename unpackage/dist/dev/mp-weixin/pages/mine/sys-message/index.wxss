page {
  height: 100%;
  background: #f5f5f5;
}
.message {
  padding-bottom: 40rpx;
  padding-top: 10rpx;
}
.push-message {
  margin: 0 15px;
}
.push-message .message-list .message-item {
  position: relative;
  margin-top: 15px;
  color: #666;
  background: #fff;
  border-radius: 5px;
  -webkit-box-shadow: 0 5px 10px #f2f2f2;
          box-shadow: 0 5px 10px #f2f2f2;
  padding: 10px 15px;
}
.push-message .message-list .message-item .dot {
  color: red;
  position: absolute;
  top: -12px;
  right: 5px;
  font-size: 30px;
  z-index: 90;
}
.push-message .message-list .message-item .title {
  font-size: 14px;
}
.push-message .message-list .message-item .time {
  font-size: 24rpx;
  color: #ccc;
}
.push-message .message-list .message-item .content {
  color: #ccc;
  font-size: 12px;
  text-indent: 1em;
  display: -webkit-box !important;
  overflow: hidden;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.push-message .message-list .message-item .time {
  margin-top: 4px;
  font-size: 12px;
}

