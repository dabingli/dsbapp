<block wx:if="{{list}}"><view><view class="lunbo"><swiper class="swiper" indicator-dots="{{true}}" autoplay="{{false}}" interval="{{2000}}" duration="{{500}}" indicator-color="#E8E6E3" indicator-active-color="#FF8D30"><block wx:for="{{list.image}}" wx:for-item="img" wx:for-index="index" wx:key="index"><swiper-item class="swiper-item"><image src="{{img}}"></image></swiper-item></block></swiper></view><view class="describe"><view class="title">{{list.name}}</view><view><view class="pay">{{"￥"+list.price}}</view><number-box vue-id="1" min="{{list.min_num}}" max="{{list.num}}" value="{{list.min_num}}" data-event-opts="{{[['^change',[['change']]]]}}" bind:change="__e" bind:__l="__l"></number-box></view></view><view class="activity"><view class="text">活动</view><uni-collapse class="uni-collapse" vue-id="2" accordion="true" bind:__l="__l" vue-slots="{{['default']}}"><uni-collapse-item vue-id="{{('3')+','+('2')}}" bind:__l="__l" vue-slots="{{['default']}}">{{''+list.activity+''}}</uni-collapse-item></uni-collapse></view><view><rich-text nodes="{{content}}"></rich-text></view><view class="des"><image class="fab" src="../../../static/fab.png" data-event-opts="{{[['tap',[['link',['$event']]]]]}}" bindtap="__e"></image></view><view class="foot"><view class="iconfont icongouwuche"></view><button data-event-opts="{{[['tap',[['addCart',['$event']]]]]}}" class="add" bindtap="__e">加入购物车</button><view data-event-opts="{{[['tap',[['buy',['product']]]]]}}" class="btn" bindtap="__e">立即购买</view></view></view></block>