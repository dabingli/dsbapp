
.sunui-radio-label {
	font-size: .7em;
	padding: 2.5% 0;
	margin: 7rpx;
	text-align: center;
	border-radius: 5px;
	width: 16%;
	color: #9c9c9c;
	background-color: #fff;
	border: 1px solid #9c9c9c;
	margin-top: 40px;
}
.sunui-radio-checkd {
	color: #4c83ff;
	background-color: #fff;
	border: 1px solid #4c83ff;
}
.sunui-radio-group {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-flex-wrap: wrap;
	    -ms-flex-wrap: wrap;
	        flex-wrap: wrap;
	width: 100vw;
}
.sunui-radio-group radio {
	display: none;
}

