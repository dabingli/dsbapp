page {
  background: #F6F6F5;
}
.step {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  padding: 30rpx 30rpx 53rpx;
}
.step .img {
  line-height: 1;
}
.step .img image {
  width: 230rpx;
  height: 52rpx;
}
.step .img .text {
  font-size: 26rpx;
  color: #C5C5BD;
  text-align: center;
  line-height: 1;
  padding-top: 22rpx;
}
.id {
  background: #fff;
  padding: 39rpx 0 34rpx;
  border-bottom: 2rpx solid #F6F6F5;
}
.id .title {
  font-size: 28rpx;
  color: #8A8A83;
  text-align: center;
  padding-bottom: 30rpx;
}
.id .image {
  line-height: 1;
  text-align: center;
}
.id .image image {
  width: 366rpx;
  height: 212rpx;
  padding-bottom: 23rpx;
}
.photo {
  background: #fff;
  padding: 39rpx 0 155rpx;
  border-bottom: 2rpx solid #F6F6F5;
}
.photo .title {
  color: #8A8A83;
  font-size: 28rpx;
  text-align: center;
  padding-bottom: 58rpx;
}
.photo .demo {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
}
.photo .demo .img {
  padding: 0 72rpx;
}
.photo .demo .img image {
  width: 197rpx;
  height: 258rpx;
}
.input {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  padding: 30rpx;
  background: #fff;
  border-bottom: 2rpx solid #F6F6F5;
}
.input .name {
  color: #424242;
  font-size: 30rpx;
  width: 17%;
  margin: auto 0;
}
.input input {
  width: 83%;
}
.btn {
  line-height: 1;
  background: #FF6A30;
  color: #fff;
  font-size: 38rpx;
  padding: 24rpx 0;
  position: fixed;
  bottom: 81rpx;
  left: 30rpx;
  right: 30rpx;
  z-index: 99;
  border-radius: 12rpx;
}

