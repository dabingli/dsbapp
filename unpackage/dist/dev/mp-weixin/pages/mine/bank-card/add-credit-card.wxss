      -ms-flex-direction: row;
          flex-direction: row;
  padding: 30rpx 0;
  border-bottom: 1px solid #F2F4F7;
}
.change-bank .bank .item .must {
  color: red;
}
.change-bank .bank .item .title {
  line-height: 1;
  width: 25%;
  font-size: 32rpx;
  color: #333333;
  padding-top: 10rpx;
}
.change-bank .bank .item input {
  width: 75%;
  line-height: 1;
  font-size: 32rpx;
  color: #474A4D;
}
.change-bank .bank .item .uni-list-cell-db {
  font-size: 32rpx;
  padding-top: 5px;
}
.change-bank .bank .phone {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  padding: 30rpx 0;
}
.change-bank .bank .phone .title {
  line-height: 1;
  width: 25%;
  font-size: 32rpx;
  color: #333333;
  padding-top: 10rpx;
}
.change-bank .bank .phone input {
  width: 45%;
  line-height: 1;
  font-size: 32rpx;
  color: #474A4D;
}
.change-bank .bank .phone .code {
  padding: 12rpx 16rpx;
  border-radius: 24px;
  background: #549cff;
  color: #fff;
  font-size: 24rpx;
}
.change-bank .bottom {
  position: absolute;
  bottom: 81rpx;
  width: 100%;
}
.change-bank .bottom .btn {
  margin: 0 30rpx;
  padding: 24rpx 0;
  font-size: 38rpx;
  color: #fff;
  border-radius: 12rpx;
  text-align: center;
  background: #FF6A30;
  line-height: 1;
}
.change-bank button[disabled]:not([type]) {
  color: #fff;
  background-color: #FF6A30;
  opacity: 0.8;
}
.change-bank .input-placeholder {
  font-size: 32rpx;
}
.change-bank .mask {
  position: absolute;
  z-index: 999;
  background: rgba(0, 0, 0, 0.7);
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}
.change-bank .mask .popup {
  background: #fff;
  border-radius: 10rpx;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
      -ms-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 80%;
  overflow: hidden;
}
.change-bank .mask .popup input {
  width: 100%;
  padding: 20rpx 0;
  border-bottom: 1px solid #f2f2f2;
  font-size: 32rpx;
}
.change-bank .mask .popup .title {
  padding: 20rpx 0;
  color: #333;
  font-size: 32rpx;
  border-bottom: 1px solid #f2f2f2;
}
.change-bank .mask .popup .op {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.change-bank .mask .popup .op button {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
}
.change-bank .mask .popup .op button:first-child {
  border-right: 1px solid #ccc;
}

