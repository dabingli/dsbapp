page {
  background: #F2F4F7;
}
.change-bank .bank,
.change-bank .line {
  background: #fff;
  border-bottom: 1px solid #F2F4F7;
  padding: 0 30rpx;
}
.change-bank .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
      -ms-flex-direction: row;
          flex-direction: row;
  padding: 30rpx 0;
  border-bottom: 1px solid #F2F4F7;
}
.change-bank .item .must {
  color: red;
}
.change-bank .item .title {
  line-height: 1;
  width: 25%;
  font-size: 32rpx;
  color: #333333;
  padding-top: 10rpx;
}
.change-bank .item input {
  width: 75%;
  line-height: 1;
  font-size: 32rpx;
  color: #474A4D;
}
.change-bank .item .uni-list-cell-db {
  font-size: 32rpx;
  padding-top: 5px;
}
.change-bank .phone {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  padding: 30rpx 0;
}
.change-bank .phone .title {
  line-height: 1;
  width: 25%;
  font-size: 32rpx;
  color: #333333;
  padding-top: 10rpx;
}
.change-bank .phone input {
  width: 45%;
  line-height: 1;
  font-size: 32rpx;
  color: #474A4D;
}
.change-bank .phone .code {
  padding: 12rpx 16rpx;
  border-radius: 24px;
  background: #549cff;
  color: #fff;
  font-size: 24rpx;
}
.change-bank .bottom {
  position: absolute;
  bottom: 81rpx;
  width: 100%;
}
.change-bank .bottom .btn {
  margin: 0 30rpx;
  padding: 24rpx 0;
  font-size: 38rpx;
  color: #fff;
  border-radius: 12rpx;
  text-align: center;
  background: #FF6A30;
  line-height: 1;
}
.change-bank button[disabled]:not([type]) {
  color: #fff;
  background-color: #FF6A30;
  opacity: 0.8;
}
.change-bank .input-placeholder {
  font-size: 32rpx;
}
.change-bank .line {
  margin-bottom: 10rpx;
}
.change-bank .line input {
  color: #ccc;
}

