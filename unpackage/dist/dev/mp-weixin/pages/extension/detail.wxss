.word-detail {
  padding: 20rpx 30rpx;
}
.word-detail .title {
  font-size: 36rpx;
  text-align: center;
  margin: 20rpx 0;
}
.word-detail .time {
  text-align: center;
  font-size: 24rpx;
  color: #888;
}
.word-detail .swiper {
  height: 320rpx;
  margin: 30rpx 0;
}
.word-detail .swiper .swiper-item {
  height: 320rpx;
}
.word-detail .swiper .swiper-item image {
  width: 100%;
  height: 320rpx;
}
.word-detail .content {
  font-size: 28rpx;
  text-indent: 2em;
}

